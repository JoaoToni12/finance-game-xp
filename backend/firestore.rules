rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only manage their own document and subcollections.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;

      // Users can manage their own quests.
      match /user_quests/{questId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Users can manage their own transactions.
    match /transactions/{transactionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }

    // Users can create and read their own xp logs. Logs are immutable.
    match /xp_log/{logId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // Quests are global and read-only for authenticated users.
    match /quests/{questId} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}